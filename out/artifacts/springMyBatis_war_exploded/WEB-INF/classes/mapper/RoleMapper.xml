<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--<mapper namespace="com.bdqn.dao.user.UserMapper">-->
<mapper namespace="com.bdqn.dao.RoleMapper">

    <!-- 查询用户表记录数 -->
    <select id="selectCount" resultType="int">
		select count(1) as count from `smbms_role`
	</select>

    <!-- 通过id查找角色 -->
    <select id="selectRoleById" resultType="Role">
		select count(1) as count from `smbms_role`
	</select>

    <!-- 查询角色信息 -->
    <select id="selectRoles" resultType="Role">
		SELECT * FROM `smbms_role`
	</select>

</mapper>